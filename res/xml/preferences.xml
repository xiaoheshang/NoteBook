<?xml version="1.0" encoding="UTF-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
	<PreferenceCategory 
	    android:layout="@layout/preference_category" 
	    android:title="账号管理">
	    <Preference 
	        android:layout="@layout/preference" 
	        android:title="注销登录" 
	        android:key="account" />
	    <Preference 
	        android:layout="@layout/preference" 
	        android:title="我的资料" 
	        android:key="myinfo" />
    </PreferenceCategory>
    
	<PreferenceCategory 
	    android:layout="@layout/preference_category" 
	    android:title="功能设置">
	    <Preference
	        android:layout="@layout/preference" 
	        android:title="短信模版设置"
	        android:key="messagetemplate"
	        android:summary="设置发送短信息的模板"
	        />
		<CheckBoxPreference 
		    android:layout="@layout/preference" 
		    android:title="自动发送短信" 
	        android:key="autosendmessage" 
	        android:summary="选择后有新的录取信息将自动给学生短信提示" 
		    android:defaultValue="false"/>
		<CheckBoxPreference 
		    android:layout="@layout/preference" 
		    android:title="提示声音" 
	        android:key="voice" 
	        android:summary="已开启提示声音" 
		    android:defaultValue="true"/>
		<CheckBoxPreference 
		    android:layout="@layout/preference" 
		    android:title="启动检查更新" 
	        android:key="checkup" 
	        android:summary="启动程序时检查版本更新" 
		    android:defaultValue="true"/>
    </PreferenceCategory>
    
    <PreferenceCategory 
	    android:layout="@layout/preference_category" 
	    android:title="其他">
        <Preference 
	        android:layout="@layout/preference" 
	        android:title="新版本检测" 
	        android:key="update" 
	        android:summary="检测是否有新版本"/>
        <Preference 
	        android:layout="@layout/preference" 
	        android:title="软件说明" 
	        android:key="about" 
	        android:summary="注意事项，操作说明"/>
    </PreferenceCategory>
</PreferenceScreen>